{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "preserveValueImports": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/@/": ["./src/"]
    },
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "/@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
